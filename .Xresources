/* URxvt*keysym.C-M-c:     perl:clipboard:copy; */
/* URxvt*keysym.C-M-v:     perl:clipboard:paste; */
URxvt*keysym.Control-Meta-V: eval:paste_clipboard
URxvt*keysym.Control-Meta-C: eval:selection_to_clipboard

URxvt*font: xft:Dejavu Sans Mono:size=8,xft:Font Awesome 5 Free:size=8,xft:Inconsolata\ for\ Powerline:pixelsize=22

URxvt*letterSpace: -1
URxvt*saveLines: 1000000

!-- Perl extensions !
!URxvt.perl-ext-common: default,clipboard,matcher,tabbed,font-size,url-select,keyboard-select
URxvt.perl-ext-common: default,clipboard,matcher,font-size,url-select,keyboard-select
URxvt.searchable-scrollback: CM-s
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.url-select.launcher:	/usr/bin/flashpeak-slimjet
URxvt.url-select.underline: true
URxvt.matcher.button: 1

!-- Change background/foreground colours !
URxvt*keysym.C-7: command:\033]11;#ffffff\007\033]10;black\007
URxvt*keysym.C-6: command:\033]11;#000000\007\033]10;white\007

!-- Change font size on the fly !
!URxvt*keysym.C-equal: font-size:increase
!URxvt*keysym.C-underscore: font-size:decrease
URxvt*keysym.C-Up:     font-size:increase
URxvt*keysym.C-Down:   font-size:decrease
URxvt*keysym.C-S-Up:   font-size:incglobal
URxvt*keysym.C-S-Down: font-size:decglobal
URxvt*keysym.C-equal:  font-size:reset
URxvt*keysym.C-slash:  font-size:show

URxvt*iso14755: false
URxvt*iso14755_52: false
