!-- Xft settings !
Xft.dpi: 190
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.autohint: false
Xft.lcdfilter: lcddefault

!-- URxvt !
URxvt*background: #1b1b1b
URxvt*foreground: #B2B2B2
URxvt.scrollBar: false
URxvt*font: xft:xos4 Terminus:pizelsize=17,\
            xft:monaco:size=10,\
            xft:Noto Mono:size=10

URxvt*boldfold: xft:xos4 Terminus:pizelsize=17,\
                xft:monaco:bold:size=10,\
                xft:Noto Mono:bold:size=10
URxvt.letterSpace: 1
URxvt.saveLines: 1000000

!-- Perl extensions !
URxvt.perl-ext-common: default,matcher,resize-font

!-- Change font size on the fly !
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-equal: resize-font:bigger
URxvt.iso14755: false
URxvt.iso14755_52: false

!-- Xterm !
xterm*font: *-Terminus-*-*-*-18-*

! special
*.foreground:   #c7ccd1
*.background:   #1c2023
*.cursorColor:  #c7ccd1

! black
*.color0:       #1c2023
