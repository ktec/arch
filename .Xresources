!-- Xft settings !
!-- Using `xdpyinfo | grep -B 2 resolution` u can find res for ur monitor
!Xft*dpi: 220
Xft*dpi: 220


Xft*antialias: true
/* Xft*rgba: rgb */
/* Xft*hinting:                full */
/* Xft*hintstyle:  hintfull */

Xft*hinting: true
Xft*hintstyle: hintslight
Xft*autohint: false
Xft*lcdfilter: lcddefault
urxvt*background:       rgba:0000/0000/0000/cccc

URxvt.transparent:   true
URxvt.shading:       20 

!-- Xterm settings !

Xterm*font: *-Terminus-*-*-*-27-*,xft:Font Awesome 5 Free:size=8
XTerm*utf8: 2

!-- URxvt settings !

/* XTerm*saveLines:            32767 */
