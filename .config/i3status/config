volume master {
  format = "♪: %volume"
  format_muted = "♪: %volume"
  device = "pulse"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  # format = "%Y-%m-%d %H:%M:%S"
  format = " %a %d-%m-%Y %H:%M "
}

load {
  format = "Load: %1min"
}

disk "/" {
  # format = "  %avail"
  format = " ⛁ %avail"
}
